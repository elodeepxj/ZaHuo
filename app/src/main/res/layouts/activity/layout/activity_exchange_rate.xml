<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.joker.zahuo.ui.activity.ExchangeRateActivity">

    <com.joker.zahuo.ui.view.PublicTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineColor="@color/color_707070"
        app:title_text="@string/title_exchange_converter" />

    <LinearLayout
        android:id="@+id/ll_original_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_original_currency"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_original_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_more_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        >

        <EditText
            android:id="@+id/et_original_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_707070"
            android:singleLine="true"
            android:background="@null"
            android:letterSpacing="0.2"
            android:hint="100"
            android:imeOptions="actionSearch"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_c0c0c0"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_target_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_target_currency"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_target_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/color_303030"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_more_blue" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_target_money"
            android:layout_width="match_parent"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_707070"
            android:letterSpacing="0.2"
            android:text="123"
            android:singleLine="true"
            android:layout_height="@dimen/dp_36" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_c0c0c0"/>
    </LinearLayout>

</LinearLayout>
